[Unit]
Description=Telegram Bot Admin Panel
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/telegram_bot_admin
Environment=PATH=/path/to/telegram_bot_admin/venv/bin
ExecStart=/path/to/telegram_bot_admin/venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
